@model MyFirstDBKIaniClass.Entities.Todo

<form asp-action="AddEditTodo" asp-controller="" method="post">
  
    <div class="form-group row">
        <label asp-for="Title" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control" placeholder="Enter title">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <textarea asp-for="Description" class="form-control" placeholder="Enter description"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Author" class="col-sm-2 col-form-label">Author</label>
        <div class="col-sm-10">
            <input asp-for="Author" class="form-control" placeholder="Enter author">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Level" class="col-sm-2 col-form-label">Level</label>
        <div class="col-sm-10">
            <select asp-for="Level" class="form-control">
                <option value="easy">easy</option>
                <option value="middle">middle</option>
                <option value="hard">hard</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="StickyNote" class="col-sm-2 col-form-label">Sticky Note</label>
        <div class="col-sm-10">
            <input asp-for="StickyNote" class="form-control" placeholder="Enter sticky note">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Time" class="col-sm-2 col-form-label">Time</label>
        <div class="col-sm-10">
            <input asp-for="Time" class="form-control" type="datetime-local">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Completed" class="col-sm-2 col-form-label">Completed</label>
        <div class="col-sm-10">
            <input asp-for="Completed" class="" type="checkbox">
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Create Todo</button>
        </div>
    </div>
</form>