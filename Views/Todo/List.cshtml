@model List<Todo>
<h1>Todo List</h1>
<div class="d-flex justify-content-between">
	<form asp-action="list" method="post">
		<input type="text">
		<a asp-action="AddEditTodo" asp-controller="Todo">Add</a>
	</form>
</div>
<div class="d-flex flex-column gap-3">

	@foreach (var todo in Model)
	{
		<div class="d-flex justify-content-between   border border-3  px-3 " style="border-left:5px solid @(todo.Level == "middle"?"yellow":todo.Level == "easy"?"green":todo.Level == "hard"?"red":"") !important; border-radius:10px;">
			<div>
				<div class="d-flex align-items-center ">
					<a class="h4 me-2 text-decoration-none text-black " href="">@(todo.Title)</a>
					<span class="badge bg-info text-dark">@(todo.StickyNote)</span>
				</div>
				<small class="text-muted ">@(todo.Time)</small>
			</div>

			<div class="d-flex align-items-center justify-content-center gap-2">
				<span>@(todo.Completed ? "✔" : "❌")</span>
				<div class="dropdown ">
					<button class="bg-transparent border-0" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
						💼
					</button>
					<ul class="dropdown-menu dropstart" aria-labelledby="dropdownMenuButton1">
						<li><a class="dropdown-item" role="button" onclick="del(@todo.Id)">DELETE</a></li>
						<li><a class="dropdown-item" asp-action="EditTodo" asp-route-id="@(todo.Id)">EDIT</a></li>
					</ul>
				</div>
			</div>
		</div>
	}

</div>

	<script>
		let del = (id) => {
			if (confirm("Do you want to del the row?" + id)) {
				window.location.replace(`/Todo/Remove?id=${id}`)
			}
		}
	</script>
